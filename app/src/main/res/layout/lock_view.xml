<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/lock_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="암호입력" />


    <TextView
        android:id="@+id/lock_pad1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lock_pad2"
        android:layout_above="@+id/lock_pad4"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:textSize="25dp"

        android:text="1" />

    <TextView
        android:id="@+id/lock_pad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lock_pad5"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="2" />

    <TextView
        android:id="@+id/lock_pad3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lock_pad2"
        android:layout_centerVertical="true"
        android:layout_above="@+id/lock_pad6"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:text="3" />

    <TextView
        android:id="@+id/lock_pad4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lock_pad5"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:text="4" />

    <TextView
        android:id="@+id/lock_pad5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:text="5" />

    <TextView
        android:id="@+id/lock_pad6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lock_pad5"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:text="6" />

    <TextView
        android:id="@+id/lock_pad7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lock_pad8"
        android:layout_centerVertical="true"
        android:layout_below="@+id/lock_pad4"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:text="7" />

    <TextView
        android:id="@+id/lock_pad8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lock_pad5"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:text="8" />

    <TextView
        android:id="@+id/lock_pad9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lock_pad8"
        android:layout_centerVertical="true"
        android:layout_below="@+id/lock_pad6"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:text="9" />


    <TextView
        android:id="@+id/lock_pad0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lock_pad8"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:text="0" />

    <TextView
        android:id="@+id/lock_pad_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/lock_pad0"
        android:layout_centerVertical="true"
        android:layout_below="@+id/lock_pad9"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:text="X" />


    <TextView
        android:id="@+id/show_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lock_title"
        android:layout_toLeftOf="@+id/show_password2"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="_" />
    <TextView
        android:id="@+id/show_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lock_title"
        android:layout_toLeftOf="@+id/show_password_blank"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="_" />
    <TextView
        android:id="@+id/show_password_blank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lock_title"
        android:layout_marginTop="40dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:text="" />
    <TextView
        android:id="@+id/show_password3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lock_title"
        android:layout_toRightOf="@+id/show_password_blank"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:text="_" />
    <TextView
        android:id="@+id/show_password4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lock_title"
        android:layout_toRightOf="@+id/show_password3"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="_" />

</RelativeLayout>